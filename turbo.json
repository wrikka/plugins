{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"globalDependencies": [],
	"tasks": {
		"watch": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"prepare": {
			"cache": false
		},
		"format": {
			"dependsOn": ["^prepare"]
		},
		"lint": {
			"dependsOn": ["^format"],
			"cache": false
		},
		"test": {
			"inputs": ["src/**/*.ts", "test/**/*.ts"],
			"dependsOn": ["^lint"],
			"cache": true
		},
		"build": {
			"dependsOn": ["^lint"],
			"outputs": [],
			"cache": false
		},
		"verify": {
			"dependsOn": ["^test"],
			"cache": false
		},
		"preview": {
			"dependsOn": ["^verify"]
		}
	}
}
