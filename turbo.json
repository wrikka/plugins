{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["**/.env.*"],
  "tasks": {
    "watch": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["lint", "^lint"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "prepare": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["format", "^format"],
      "cache": false
    },
    "format": {
      "dependsOn": ["prepare", "^prepare"]
    },
    "test": {
      "dependsOn": ["lint", "^lint"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "verify": {
      "dependsOn": ["test", "^test"],
      "cache": false
    }
  }
}
