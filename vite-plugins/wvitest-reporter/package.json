{
	"name": "vitest-plugin-reporter",
	"version": "0.1.0",
	"type": "module",
	"description": "Custom test reporter for Vitest with beautiful output",
	"keywords": ["vitest", "plugin", "reporter", "test", "output"],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": ["dist"],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"lint": "oxlint --fix --type-aware",
		"format": "dprint fmt",
		"test": "vitest",
		"verify": "bun lint && bun test"
	},
	"peerDependencies": {
		"vitest": ">=4.0.16"
	},
	"devDependencies": {
		"@types/node": "^24.10.9",
		"@vitest/runner": "^4.0.17",
		"typescript": "^5.9.3",
		"vitest": "^4.0.17"
	}
}
